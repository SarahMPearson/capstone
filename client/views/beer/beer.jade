H2 BEER

input(type='text', ng-model='beername', placeholder='PBR')
button.btn.btn-default(ng-click='findBeer()') Find Beer

input(type='text', ng-model='breweryname', placeholder='Dogfish Head')
button(ng-click='findBrew()') Find Brewery

ul
  li(ng-repeat='beer in beers'): a(href='', ng-click='show(beer)') {{beer.name}}


button.btn.btn-success(ng-show='beers.name', ng-click='addLove()') Love It!
button.btn.btn-danger(ng-show='beers.name', ng-click='addHate()') Hate It!
.row
  .col-xs-12
    .panel
      .panel-heading.panel-warning
        h1#bName {{beer.name}}
        .panel.body
          .row
            .col-xs-4
              img(src='{{beer.labels.medium}}' || 'img/')
            .col-xs-1
            .col-xs-3
              h1#abv(ng-show='beer.abv') {{beer.abv}}%
            .col-xs-4
              h2#glass{{beer.glass.name}}
                img#pint(src='{{beer.glass.img}}')
          .row
            .col-xs-12
              h5#description{{beer.description}}
        .panel-footer
          .row
            .col-xs-12
